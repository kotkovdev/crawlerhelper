{% extends 'layout.twig' %}

{% block body %}
    <div class="table-responsive table-responsive-data2">
        <table class="table table-data2">
            <thead>
            <tr>
                <th>Timestamp</th>
                <th>URL</th>
                <th>Status</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
                {% for instance in instances %}
                    <tr>
                        <td><p>{{ instance.created_at }}</p></td>
                        <td><p>{{ instance.url }}</p></td>
                        {% if instance.is_exists == 1 %}
                            <td>Saved</td>
                        {% else %}
                            <td>Deleted</td>
                        {% endif %}
                        <td>
                            <button class="btn btn-link delete">Delete</button>
                            <button class="btn btn-link delete">Show</button>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
{% endblock %}