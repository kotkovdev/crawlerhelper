{% extends 'layout.twig' %}

{% block body %}
    {% if jobs|length > 0 %}
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                <tr>
                    <th>Timestamp</th>
                    <th>URL</th>
                    <th>Job type</th>
                    <th>Settings</th>
                    <th>Status</th>
                    <th>Files</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for job in jobs %}
                    <tr class="tr-shadow" id="job-{{ job.id }}">
                        <td>{{ job.created_at }}</td>
                        <td>
                            {{ job.url }}
                        </td>
                        <td>
                            {% if (job.type == 1) %}
                                Download and analyze webpage
                            {% endif %}
                        </td>
                        <td>
                            Coming
                        </td>
                        <td>
                            {% if (job.status == 1) %}
                                <span class="status--process">Prepared</span>
                            {% elseif (job.status == 2) %}
                                <span class="status--process">Processing</span>
                            {% elseif (job.status == 3) %}
                                <span class="status--process">Complete</span>
                            {% else %}
                                <span class="status--denied">Error</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="table-data-feature">
                                <button class="item remove-job" onclick="removeJob({{ job.id }});" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete">
                                    <i class="zmdi zmdi-delete"></i>
                                </button>
                                <button onclick="javascript:window.open('/public/upload/instances/')" class="item" data-toggle="tooltip" data-placement="top" title="" data-original-title="Open instance">
                                    <i class="zmdi zmdi-mail-send"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    <tr class="spacer"></tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        The list of jobs is empty
    {% endif %}
{% endblock %}